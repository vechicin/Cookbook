<div class='page-container'>
  <h2 class='page-title'>Shopping List</h2>
  <div class='shopping-list'>
    <h3>Amount of food items to buy: <%= @ingredients.length %></h3>
    <h3>Total price of ingredients: $<%= @ingredients_price %></h3>
  </div>
  <table class='food-table'>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% if @ingredients.length === 0 %>
        <tr>
          <td>No ingredients added</td>
        </tr>
      <% else %>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <td><%= ingredient.food.name %></td>
            <td><%= ingredient.quantity %> <%= ingredient.food.measurement_unit %></td>
            <td><%= ingredient.food.price.to_f * ingredient.quantity.to_i %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div id='back-recipes'>
    <%= link_to "Go back", url_for(:back), class:"create-button" %>
    <div>
    </div>
